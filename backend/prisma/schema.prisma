generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
    id Int @id @default(autoincrement())
    first_name String
    last_name String
    email String @unique
    password String
    google_access_token String?
    google_refresh_token String?
    google_token_expiry DateTime?
    google_calendar_sync_token String?
    google_calendar_last_sync DateTime?
    canvas_ics_url String?
    canvas_last_sync DateTime?
    tasks Task[]
}

model Task {
    id Int @id @default(autoincrement())
    start_time DateTime
    end_time DateTime
    name String?
    description String?
    priority String?
    color String?
    google_event_id String?
    canvas_event_id String?
    source String?
    recurrence String[]
    is_recurring Boolean @default(false)
    user User @relation(fields: [user_id], references: [id])
    user_id Int
}
